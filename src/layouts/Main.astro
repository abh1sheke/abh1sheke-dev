---
import "../main.css";
import Navlink from "../lib/components/Navlink.astro";

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="min-h-screen">
  <head>
    <meta charset="UTF-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content={description} />
    <title>{title}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Urbanist:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
      rel="stylesheet"
    />
    <script
      src="https://kit.fontawesome.com/dc19eae1d2.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <body
    class="scrollbar-thin scrollbar-thumb-ocean-800 scrollbar-thumb-rounded-md"
  >
    <main
      class="relative min-h-screen bg-gradient-to-t from-ocean-800 via-ocean-900 to-ocean-1000 font-urb"
    >
      <header
        class="relative z-10 flex h-14 items-center justify-center sm:px-0 md:justify-end"
      >
        <ul class="flex justify-center font-inter">
          <Navlink href="/">Home</Navlink>
          <Navlink href="/blog">Blog</Navlink>
          <Navlink href="/#projects">Projects</Navlink>
          <Navlink href="/_" disabled={true}>Socials</Navlink>
        </ul>
      </header>
      <slot />
    </main>
  </body>
</html>
