---
import RootLayout from "../layouts/RootLayout.astro";
import Navbar from "../lib/components/Navbar.astro";
import IndexIntro from "../lib/containers/IndexIntro.astro";
import IndexBlog from "../lib/containers/IndexBlog.astro";
import IndexTrinkets from "../lib/containers/IndexTrinkets.astro";
---

<RootLayout>
  <Navbar />
  <main class="min-h-screen bg-dark-800 pt-16">
    <div
      class="sm:block flex flex-col m-auto text-cool-100 w-[335px] sm:w-[530px] pt-10"
    >
      <IndexIntro id="intro" />
      <IndexBlog id="blog" />
      <IndexTrinkets id="blog" />
    </div>
  </main>
  <footer
    class="w-[335px] sm:w-[530px] border-t border-t-gray-600 my-10 mx-auto pt-10"
  >
    <h3 class="text-center text-cool-100">
      <span class="text-blaze-400">&copy;</span>
      2022 - Present Abhisheke Acharya
    </h3>
  </footer>
</RootLayout>
